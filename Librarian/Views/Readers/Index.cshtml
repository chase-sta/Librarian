@model IEnumerable<Librarian.Models.Reader>

@if (Model.Count() > 0)
{
    <a class="btn btn-info" asp-action="Create">Add a New Reader</a>
    <table class="table">
        <tr class="table-secondary">
            <th>Name</th>
            <th>Age</th>
            <th>Email</th>
            <th></th>
        </tr>
        @foreach (var reader in Model)
        {
            <tr>
                <td> @reader.Name</td>
                <td> @reader.Age</td>
                <td> @reader.Email</td>
                <td>
                    <a class="btn btn-warning" asp-route-id="@reader.Id" asp-action="Edit"> Edit </a>
                    <a class="btn btn-danger" asp-route-id="@reader.Id" asp-action="Delete">Delete</a>
                </td>
            </tr>
        }
    </table>
}
else
{
    <h2>Oops!</h2>
    <p>No readers found. Please add a reader to get started!</p>
    <a class="btn btn-info" asp-action="Create">Add a New Reader</a>
}

