@model Librarian.Models.Reader

<h1>Add a reader to the library database!</h1>

<div class="col-6">
    <form method="post">
        <div class="form-group">
            <label for="nameinput">Name</label>
            <input class="form-control" id="nameinput" placeholder="Enter the reader's name (eg. John Smith)" asp-for="Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="ageinput">Age</label>
            <input class="form-control" id="ageinput" placeholder="Enter the reader's age (eg. 21)" asp-for="Age">
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="emailinput">Email</label>
            <input class="form-control" id="emailinput" placeholder="Enter the reader's email (eg. johncsmith@gmail.com)" asp-for="Email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6">
                <input type="submit" value="Create" class="btn btn-info form-control" id="input4">
            </div>
            <div class="col-6">
                <a class="btn btn-secondary form-control" id="input4">Back to Home</a>
            </div>
        </div>
    </form>
</div>